<Window x:Class="PickandPlace.pcbvisualiser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
         xmlns:emui="clr-namespace:Emgu.CV.UI;assembly=Emgu.CV.UI"
           xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing"
             d:DesignHeight="600" d:DesignWidth="640"
          Width="660" Height="550"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner" 
         FocusManager.FocusedElement="{Binding ElementName=leftMarginTextBox}" Icon="Resources/appbar.camera.png" Title="PCB visualiser" WindowStyle="ToolWindow" Loaded="Window_Loaded" 
         >

    <StackPanel>
        <Canvas Height="auto" Width="auto" x:Name="myCanvas"/>


    </StackPanel>

    </Window>
